{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2020",
        "moduleResolution": "node",
        "removeComments": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
      "node_modules",
      "src/db/migrations",
      "src/db/seeders"
    ],
    "include": [
        "index.ts",
        "./src/**/*"
    ]
}

