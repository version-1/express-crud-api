{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2020",
        "moduleResolution": "node",
        "removeComments": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
        "index.ts",
        "./src/**/*"
    ]
}

